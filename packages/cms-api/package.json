{
	"//": [
		"graphql-code-generator is locked on 0.10.5 because of bc break https://github.com/dotansimha/graphql-code-generator/pull/444/files#r207878190"
	],
	"name": "cms-api",
	"version": "0.0.0",
	"private": true,
	"main": "dist/src/index.js",
	"typings": "dist/src/index.d.ts",
	"bin": {
		"contember-engine-console": "dist/src/engine-console.js"
	},
	"scripts": {
		"prebuild-tenant-api": "npx gql-gen --config graphql-tenant.codegen.yml",
		"prebuild-system-api": "npx gql-gen --config graphql-system.codegen.yml",
		"prebuild-content-schema-api": "npx gql-gen --config graphql-content-schema.codegen.yml",
		"prebuild": "npm run prebuild-tenant-api && npm run prebuild-system-api && npm run prebuild-content-schema-api && mkdir -p dist && find ./tests/ -name '*.gql' -type f -exec cp --parents {} ./dist \\;",
		"test": "mocha --ui bdd --timeout 5000 './dist/tests/cases/**/*.js'",
		"test:debug": "mocha --inspect --ui bdd",
		"test:clean": "rm -rf ./dist && npm run build && npm run test",
		"console": "node dist/src/engine-console.js"
	},
	"dependencies": {
		"@apollographql/graphql-playground-html": "^1.6.6",
