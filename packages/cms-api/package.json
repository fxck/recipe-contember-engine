		"@contember/schema": "^0.0.0",
		"@contember/schema-utils": "^0.0.0",
		"@contember/schema-definition": "^0.0.0",
		"@contember/utils": "^0.0.0",
		"@koa/cors": "^2.2.3",
		"accepts": "^1.3.5",
		"apollo-server-core": "^2.9.0",
		"apollo-server-koa": "^2.9.0",
		"aws-sdk": "^2.517.0",
		"bcrypt": "^3.0.4",
		"chalk": "^2.4.2",
		"cms-common": "0.0.0",
		"cms-server-common": "0.0.0",
		"fast-deep-equal": "^2.0.1",
		"graphql": "^14.5.3",
		"graphql-errors": "^2.1.0",
		"graphql-extensions": "^0.5.7",
		"graphql-tools": "^4.0.4",
		"koa": "^2.8.1",
		"koa-bodyparser": "^3.2.0",
		"koa-compose": "^4.1.0",
		"lru-cache": "^5.1.1",
		"mime-types": "^2.1.22",
		"node-pg-migrate": "^3.22.0",
		"path-to-regexp": "^3.0.0",
		"pg": "^7.12.1",
