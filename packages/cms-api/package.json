		"@types/dotenv": "^6.1.0",
		"@types/graphql": "^14.5.0",
		"@types/koa": "^2.0.48",
		"@types/koa-bodyparser": "^4.2.2",
		"@types/koa2-cors": "^2.0.1",
		"@types/lru-cache": "^5.1.0",
