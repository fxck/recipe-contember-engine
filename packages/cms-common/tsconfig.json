{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "rootDir": "./src/",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
