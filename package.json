{
	"scripts": {
		"bootstrap": "lerna bootstrap --ci",
		"bootstrap:hoist": "lerna bootstrap --ci --hoist",
		"update": "lerna bootstrap --no-ci",
		"clean": "rm -rf node_modules/ {instances,projects}/*/{admin,api}/{dist,node_modules} packages/*/{dist,node_modules} instances/*/admin/public",
		"ts:build": "tsc --build --verbose",
		"ts:watch": "tsc --build --verbose --watch",
		"ts:clean": "tsc --build --clean",
		"prebuild": "lerna run prebuild",
		"build": "tsc --build && lerna run build",
		"test": "lerna run test",
		"eslint:lint": "eslint \"**/*.{ts,tsx}\" ",
		"eslint:fix": "eslint --fix \"**/*.{ts,tsx}\" "
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.3.0",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.13.0",
		"eslint-plugin-react-hooks": "^1.6.0",
		"lerna": "^2.11.0",
		"prettier": "1.18.2",
		"typescript": "^3.5.2"
	}
}
