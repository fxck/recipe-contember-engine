{
	"scripts": {
		"bootstrap": "lerna bootstrap --ci",
		"bootstrap:hoist": "lerna bootstrap --ci --hoist",
		"update": "lerna bootstrap --no-ci",
		"clean": "rm -rf node_modules {mangoweb,packages}/*/{dist,node_modules}",
		"ts:build": "tsc --build --verbose",
		"ts:watch": "tsc --build --verbose --watch",
		"ts:clean": "tsc --build --clean",
		"prebuild": "lerna run prebuild",
		"build": "npm run ts:build",
		"test": "lerna run test",
		"prettier:lint": "prettier --list-different --ignore-path \".gitignore\" \"**/*.{ts,tsx,json}\" ",
		"prettier:fix": "prettier --write --ignore-path \".gitignore\" \"**/*.{ts,tsx,json}\" "
	},
	"devDependencies": {
		"lerna": "^2.11.0",
		"typescript": "^3.0.1",
		"prettier": "1.14.3"
	}
}
