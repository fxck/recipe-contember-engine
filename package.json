{
	"scripts": {
		"bootstrap": "lerna bootstrap --ci",
		"bootstrap:hoist": "lerna bootstrap --ci --hoist",
		"update": "lerna bootstrap --no-ci",
		"cli": "node ./packages/cli/dist/src/cli.js",
		"restart-api": "docker-compose up --force-recreate -d --no-deps api",
		"ci-clean": "rm -rf packages/*/node_modules/typescript",
		"clean": "rm -rf node_modules/ packages/*/{dist,node_modules}",
		"ts:build": "tsc --build --verbose",
		"ts:watch": "tsc --build --verbose --watch",
		"ts:clean": "tsc --build --clean",
		"prebuild": "lerna run prebuild",
		"build": "tsc --build && lerna run build",
		"test": "lerna run --concurrency 1 test",
		"eslint:lint": "eslint \"**/*.{ts,tsx}\" ",
		"eslint:fix": "eslint --fix \"**/*.{ts,tsx}\" "
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.4.0",
		"@typescript-eslint/parser": "^2.4.0",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.1.2",
		"jasmine": "^3.5.0",
		"jasmine-ts": "^0.3.0",
		"lerna": "^3.18.1",
		"lerna-update-wizard": "^0.16.0",
		"prettier": "1.18.2",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.4"
	}
}
