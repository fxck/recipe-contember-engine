{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"target": "es2018",
		"moduleResolution": "node",
		"module": "ESNext",
		"strict": true,
		"incremental": true,
		"lib": [
			"esnext"
		],
		"plugins": [
			{
				"transform": "typescript-transform-extensions",
				"extensions": {
					".ts": ".js"
				}
			}
		]
	}
}
